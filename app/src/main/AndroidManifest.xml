<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tripplannerapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripPlannerApp">
        <activity
            android:name=".GridItemActivity"
            android:exported="false" />
        <activity
            android:name=".AddHotelActivity"
            android:exported="false" />
        <activity
            android:name=".EditActActivity"
            android:exported="false" />
        <activity
            android:name=".LightSensorActivity"
            android:exported="false" />
        <activity
            android:name=".ActivityDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".AddPlan"
            android:exported="false"
            android:label="" />
        <activity
            android:name=".Restaurant_Edit"
            android:exported="false" />
        <activity
            android:name=".EditProfileActivity"
            android:exported="false"
            android:label="Edit Profile"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Plan"
            android:exported="false"
            android:label=""
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddTrip"
            android:exported="false"
            android:label="Add Trip"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="My Trips" />
        <activity
            android:name=".Room"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".RestaurantDetailsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RestaurantList"
            android:exported="false" />
        <activity
            android:name=".RestaurantAdd"
            android:exported="false" />
        <activity
            android:name=".Transportation"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>