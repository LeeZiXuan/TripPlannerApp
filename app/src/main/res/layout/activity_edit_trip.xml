<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTrip">

    <TextView
        android:id="@+id/destinationTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/blue_1"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinationTxt"
        android:layout_marginHorizontal="20dp"
        android:text="Destination"
        android:padding="15dp" />

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/_destination"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sDateTxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue_1"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eDateTxt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/blue_1"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/_startDate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:padding="15dp" />

            <EditText
                android:id="@+id/_endDate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eDateTxt"
                android:layout_marginLeft="20dp"
                android:padding="15dp"
                android:text="End Date"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tripNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout3"
        android:text="Trip Name"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/blue_1"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/_tripName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripNameTxt"
        android:layout_marginHorizontal="20dp"
        android:text="Trip Name"
        android:padding="15dp" />

    <TextView
        android:id="@+id/descTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_tripName"
        android:text="Description"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/blue_1"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descTxt"
        android:layout_marginHorizontal="20dp"
        android:text="Description"
        android:padding="15dp" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_description"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:text="UPDATE"
        android:textColor="@color/white"
        android:background="@drawable/login_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateBtn"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:text="DELETE"
        android:textColor="@color/white"
        android:background="@drawable/login_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

</RelativeLayout>