<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    tools:context=".RestaurantAdd">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="74dp"
        android:layout_height="59dp"
        android:layout_marginEnd="349dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#00FFFFFF"
        android:minHeight="48dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="257dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="676dp"
        android:text="@string/restaurant_to_visit"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#9CFFFFFF">

        <EditText
            android:id="@+id/R_name"
            android:layout_width="371dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:hint="Enter here"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/R_address"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R_endDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:hint="Address"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/R_startDate"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:drawablePadding="10dp"
            android:hint="Start Date"
            android:inputType="none"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/R_endDate"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R_startDate"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:drawablePadding="10dp"
            android:hint="End Date"
            android:inputType="none"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn_addRestaurant"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R_address"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="77dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="73dp"
            android:background="@drawable/login_bg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="ADD"

            android:textColor="#085E56"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="172dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="209dp"
            android:text="Add Restaurant"
            android:textSize="24sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>