<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".EditActActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="121dp"
        android:text="Activity"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/et_activityName"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="Activity Name"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/tv_activityType"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_activityName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:hint="Activity Type"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_activity_address"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_activity_enddatetime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:drawablePadding="10dp"
        android:hint="Address"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_activity_des"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_activity_address"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:drawablePadding="10dp"
        android:hint="Description"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_activity_startdatetime"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activityType"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/ic_baseline_date_range_24"
        android:drawablePadding="10dp"
        android:hint="Start Date"
        android:inputType="none"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_activity_enddatetime"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_activity_startdatetime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/ic_baseline_date_range_24"
        android:drawablePadding="10dp"
        android:hint="End Date"
        android:inputType="none"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_saveAct"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_activity_des"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/login_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="SAVE"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_activity_des"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/login_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="DELETE"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>